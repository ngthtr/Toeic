<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toStartOf="@+id/gl_limit_right"
        app:layout_constraintStart_toStartOf="@+id/gl_limit_left"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_test_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 01" />

                <RadioButton
                    android:id="@+id/rb_test_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 02" />

                <RadioButton
                    android:id="@+id/rb_test_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 03" />

                <RadioButton
                    android:id="@+id/rb_test_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 04" />

                <RadioButton
                    android:id="@+id/rb_test_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 05" />

                <RadioButton
                    android:id="@+id/rb_test_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 06" />

                <RadioButton
                    android:id="@+id/rb_test_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 07" />

                <RadioButton
                    android:id="@+id/rb_test_08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 08" />

                <RadioButton
                    android:id="@+id/rb_test_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 09" />

                <RadioButton
                    android:id="@+id/rb_test_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 10" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl_limit_right"
        app:layout_constraintStart_toStartOf="@+id/scrollView3">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_limit_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_limit_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />
</androidx.constraintlayout.widget.ConstraintLayout>